<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/productColorCircleImageShadow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="#B8D9FA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible">
    </de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/productColorCircleImageColor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/productColorCircleImageShadow"
        app:layout_constraintTop_toTopOf="@+id/productColorCircleImageShadow"
        app:layout_constraintEnd_toEndOf="@+id/productColorCircleImageShadow"
        app:layout_constraintBottom_toBottomOf="@id/productColorCircleImageShadow">
    </de.hdodenhof.circleimageview.CircleImageView>


    <TextView
        android:id="@+id/sizeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_picked"
        android:text="S"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/productColorCircleImageColor"
        app:layout_constraintTop_toTopOf="@id/productColorCircleImageColor"
        app:layout_constraintBottom_toBottomOf="@id/productColorCircleImageColor"
        app:layout_constraintEnd_toEndOf="@id/productColorCircleImageColor" >

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>